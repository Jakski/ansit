{
  "$comment": "Manifest file",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "root_directory",
    "machines",
    "command",
    "stages",
    "driver"
  ],
  "properties": {
    "root_directory": { "type": "string" },
    "command": { "type": "string" },
    "changes": {
      "type": "array",
      "items": { "$ref": "file:change.json" }
    },
    "machines": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "tasks": {
            "type": "object",
            "patternProperties": {
              ".*": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "stages": {
      "type": "array",
      "items": { "type": "string" }
    },
    "driver": { "type": "string" }
  }
}
